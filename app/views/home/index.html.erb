<section>
	<h2>Galpões</h2>
	<ul>
		<% @warehouses.each do |warehouse| %>
			<li>
				<%= link_to warehouse.name, warehouse_path(warehouse) %>
				<p><strong>Código:</strong> <%= warehouse.code %></p>
				<p><strong>Cidade:</strong> <%= warehouse.city %></p>
				<p><strong>Área:</strong> <%= number_with_delimiter(warehouse.area, delimiter: '.') %> m²</p>
			</li>
		<% end %>

		<% if @warehouses.empty? %>
			<p style="color: tomato;">Não há galpões cadastrados</p>
		<% end %>
	</ul>
</section>
