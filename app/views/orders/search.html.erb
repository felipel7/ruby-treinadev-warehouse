<section>
  <h2>Resultados da Busca por: <%= @code %></h2>

  <!-- <p><%= pluralize(@orders.count, 'pedido encontrado', 'pedidos encontrados') %></p> -->
  <p style="margin-block: 1rem;">
    <%= @orders.count %>
    <%= Order.model_name.human(count: @orders.count).downcase %>
    <%= t(:found, count: @orders.count) %>
  </p>

  <% if @orders.present? %>
    <% @orders.each do |order| %>
      <dl class="details-container__wrapper" style="margin-block: 1.5rem;">
        <div>
          <dt><%= Order.human_attribute_name(:code) %>:</dt>
          <dd><%= order.code %></dd>
        </div>

        <div>
          <dt><%= Order.human_attribute_name(:warehouse_id) %>:</dt>
          <dd><%= order.warehouse.full_description %></dd>
        </div>

        <div>
          <dt><%= Order.human_attribute_name(:supplier_id) %>:</dt>
          <dd><%= order.supplier.corporate_name %></dd>
        </div>

      </dl>
    <% end %>
  <% end %>
</section>
