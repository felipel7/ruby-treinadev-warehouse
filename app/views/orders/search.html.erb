<section>
  <h2>Resultados da Busca por: <%= @code %></h2>

  <!-- <p><%= pluralize(@orders.count, 'pedido encontrado', 'pedidos encontrados') %></p> -->
  <p style="margin-block: 1rem;">
    <%= @orders.count %>
    <%= Order.model_name.human(count: @orders.count).downcase %>
    <%= t(:found, count: @orders.count) %>
  </p>

  <% if @orders.present? %>
    <% @orders.each do |order| %>
      <%= render order %>
    <% end %>
  <% end %>
</section>
